<Window x:Class="Graphy.SumGra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Width="312" Height="352"
        DataContext="{Binding Sum, Source={StaticResource Locator}}">

    <Grid>
        <Canvas Margin="0, 22" Width="300" Height="300">
            <Path Data="{Binding myPathGeometry}"></Path>
        </Canvas>
        <Button Command="{Binding Plot}" Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
