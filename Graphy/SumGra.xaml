<Window x:Class="Graphy.SumGra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.ignore.com"
        mc:Ignorable="d ignore"
        Width="325" Height="350"
        DataContext="{Binding Sum, Source={StaticResource Locator}}">

    <Grid>
        <Canvas Margin="0, 10" Width="300" Height="300" Background="#FFBEC0C2">
            <Path x:Name="Gray" Data="{Binding Gray}" Stroke="Black" StrokeThickness="1" ></Path>
            <Path x:Name="Red" Data="{Binding Red}" Stroke="Red" StrokeThickness="1"></Path>
            <Path x:Name="Green" Data="{Binding Green}" Stroke="Green" StrokeThickness="1"></Path>
            <Path x:Name="Blue" Data="{Binding Blue}" Stroke="Blue" StrokeThickness="1"></Path>
        </Canvas>
        
    </Grid>
</Window>
